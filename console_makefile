#Project name
PROJECTNAME = project

#libraries to add eg -r:myfoo.dll
LIBS=

MCS=gmcs

all: $(PROJECTNAME).exe

CSHARPFILES = $(wildcard *.cs)
GMCSFLAGS = -debug /target:exe
SRC = $(CSHARPFILES)

$(PROJECTNAME).exe: $(SRC) 
	$(MCS) /out:$@ $(LIBS) $(GMCSFLAGS) $(SRC)

#install: all
#       cp $(PROJECTNAME).dll /someplace	

clean:
	rm -f $(PROJECTNAME).exe
	rm -f $(PROJECTNAME).exe.mdb

